<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_purchaseorder_document" inherit_id="purchase.report_purchaseorder_document">
        <xpath expr="//td[@id='product']" position="inside">
            <div t-if="line.product_id.product_calculated_attachment_po_ids" class="small mt-2">
                <span class="border-top">Related attachments:</span>
                <ul class="text-monospace">
                    <t t-foreach="line.product_id.product_calculated_attachment_po_ids" t-as="attach">
                        <li><t t-esc="attach.name"/></li>
                    </t>
                </ul>
            </div>
        </xpath>

    </template>

</odoo>