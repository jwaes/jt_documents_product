<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_template_form_view" model="ir.ui.view">
        <field name="name">product.template.common.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Documents List" name="documents_list_page">
                    <group col="2">
                        <group>
                            <h3>Sales order attachments</h3>
                            <field name="id" invisible='True' />
                            <field name="product_attachment_tag_so" invisible='True' />
                            <field name="tmpl_attachment_so_ids" widget="many2many_binary" nolabel="1" colspan="2" domain="['&amp;', ('res_model', '=', 'product.template'), ('res_id', '=', id), (product_attachment_tag_so, 'in', 'tag_ids')]" />
                        </group>
                        <group>
                            <h3>Purchase order attachments</h3>
                            <field name="id" invisible='True' />
                            <field name="product_attachment_tag_po" invisible='True' />
                            <field name="tmpl_attachment_po_ids" widget="many2many_binary" nolabel="1" colspan="2" domain="['&amp;', ('res_model', '=', 'product.template'), ('res_id', '=', id), (product_attachment_tag_po, 'in', 'tag_ids')]" />
                        </group>
                    </group>
                </page>
            </xpath>


            <div name="button_box" position="inside">
                <button name="action_see_tmpl_documents" type="object" class="oe_stat_button" icon="fa-file-text-o">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value">
                            <field name="tmpl_document_count" />
                        </span>
                        <span class="o_stat_text">Documents</span>
                    </div>
                </button>
            </div>

        </field>
    </record>

    <record id="product_product_form_view" model="ir.ui.view">
        <field name="name">product.product.common.form</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Documents List" name="documents_list_page">
                    <field name="product_attachment_tag_so" invisible='True' />
                    <field name="product_attachment_tag_po" invisible='True' />
                    <field name="id" invisible='True' />                    
                    <group col='2'>
                        <group col='1'>
                            <h5>Sales order attachments</h5>
                            <h6>Template attachments</h6>
                            <field name="tmpl_attachment_so_ids" widget="many2many_binary" nolabel="1" colspan="2" domain="['&amp;', ('res_model', '=', 'product.template'), ('res_id', '=', id), (product_attachment_tag_so, 'in', 'tag_ids')]" attrs="{'readonly': True}" />
                            <h6>Variant attachments</h6>                            
                            <field name="product_attachment_so_ids" widget="many2many_binary" nolabel="1" colspan="2" domain="['&amp;', ('res_model', '=', 'product.product'), ('res_id', '=', id), (product_attachment_tag_so, 'in', 'tag_ids')]" />
                        </group>
                        <group col='1'>
                            <h5>Purchase order attachments</h5>
                            <h6>Template attachments</h6>
                            <field name="tmpl_attachment_po_ids" widget="many2many_binary" nolabel="1" colspan="2" domain="['&amp;', ('res_model', '=', 'product.template'), ('res_id', '=', id), (product_attachment_tag_po, 'in', 'tag_ids')]" attrs="{'readonly': True}"/>
                            <h6>Variant attachments</h6>                            
                            <field name="product_attachment_po_ids" widget="many2many_binary" nolabel="1" colspan="2" domain="['&amp;', ('res_model', '=', 'product.product'), ('res_id', '=', id), (product_attachment_tag_po, 'in', 'tag_ids')]" />
                        </group>
                    </group>
                </page>
            </xpath>


            <div name="button_box" position="inside">
                <button name="action_see_documents" type="object" class="oe_stat_button" icon="fa-file-text-o">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value">
                            <field name="product_document_count" />
                        </span>
                        <span class="o_stat_text">Documents</span>
                    </div>
                </button>
            </div>

        </field>
    </record>    

</odoo>