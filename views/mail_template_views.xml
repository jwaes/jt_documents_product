<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="email_template_form_inherit_mail" model="ir.ui.view">
        <field name="name">email.template.form.inherit</field>
        <field name="model">mail.template</field>
        <field name="inherit_id" ref="mail.email_template_form" />
        <field name="arch" type="xml">
            <field name="attachment_ids" position="replace"></field>
            <xpath expr="//page[@name='content']" position="inside">
                <field name="fixed_attachment_ids" widget="many2many_binary" />
            </xpath>
            <xpath expr="//page[@name='dynamic_placeholder_generator']" position="after">
                <page string="Document tags" name="document_tags">
                    <field name="is_so" invisible="True"/>
                    <field name="is_po" invisible="True"/>
                    <div class="row mt16" attrs="{'invisible':[('is_so','=',False)]}">
                        <label class="o_form_label col-lg-3" for="product_document_tag_so" string="Tag SO" />
                        <field name="product_document_tag_so" />
                    </div>
                    <div class="row mt16" attrs="{'invisible':[('is_po','=',False)]}">
                        <label class="o_form_label col-lg-3" for="product_document_tag_po" string="Tag PO" />
                        <field name="product_document_tag_po" />
                    </div>
                </page>
            </xpath>
        </field>
    </record>

</odoo>