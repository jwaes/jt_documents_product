<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field name="priority" eval="71" />
        <field name="inherit_id" ref="documents_product.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('o_documents_right_pane')]//div[hasclass('content-group')]" position="inside">
                <div class="row mt16">
                    <label class="o_form_label col-lg-3" for="product_document_tag_so" string="Tag SO" />
                    <field name="product_document_tag_so" />
                </div>
                <div class="row mt16">
                    <label class="o_form_label col-lg-3" for="product_document_tag_po" string="Tag PO" />
                    <field name="product_document_tag_po" />
                </div>                
            </xpath>
        </field>
    </record>
</odoo>